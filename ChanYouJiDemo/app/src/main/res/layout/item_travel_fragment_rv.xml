<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/line_height"

    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/travel_bacground_image_height"
        android:id="@+id/item_travel_rv_background_iv"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:background="@mipmap/travel_brackground"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/title_padding"
        android:id="@+id/item_travel_rv_travelname_tv"
        android:textColor="@color/colorTitleText"
        android:layout_alignParentTop="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/title_padding"
        android:id="@+id/item_travel_rv_traveldate_tv"
        android:layout_below="@id/item_travel_rv_travelname_tv"
        android:textColor="@color/colorTitleText"
        />
    <android.support.v7.widget.CardView
        android:layout_width="@dimen/fragment_rv_userhead_size"
        android:layout_height="@dimen/fragment_rv_userhead_size"
        app:contentPadding="@dimen/line_height"
        app:cardCornerRadius="@dimen/title_padding"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        android:background="@color/colorTitleText"
        android:layout_alignBottom="@id/item_travel_rv_background_iv"

        >
       <android.support.v7.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           app:cardCornerRadius="@dimen/title_padding"
           >
           <ImageView

               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:id="@+id/item_travel_rv_user_iv"
               />

       </android.support.v7.widget.CardView>

    </android.support.v7.widget.CardView>


</RelativeLayout>